      ]
    },
    "form_questions_pick_text": {
      "text": "Escribe el texto de la pregunta Ejemplo: ¿cómo te gusta la carne?",
      "input": {
        "store": "form_custom_~COUNTER~_text",
        "next": "form_questions_pick_answer",
      }
    },
    "form_questions_pick_answer": {
      "text": "Ahora añade las diferentes opciones de respuesta (ejemplo: “al punto”, “poco hecha”, etc)",
