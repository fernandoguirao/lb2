        "store": "form_custom_~COUNTER~_text",
        "next": "form_questions_check_0",
      }
    },
    "form_questions_check_0": {
      "text": "Así quedaría esta pregunta:\n@form_custom_~COUNTER~_text\n@form_custom_~COUNTER~_answer",
      "next": "form_questions_check_1"
    },
    "form_questions_check_1": {
      "text": "¿Es correcto?",
      "buttons": [
        { "caption": "Sí", "next": "form_another", "flag": "form"},
        { "caption": "No", "next": "form_repeat", "decrease": "COUNTER", "unstore": "form_custom_~COUNTER~_answer"}
      ]
    },



    "form_repeat": {
      "text": "Empecemos entonces de nuevo",
      "next": "form_questions_pick_type"
    },
    "form_another": {
